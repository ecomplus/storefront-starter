<%= partial('html') %>
<head>
  <%= partial('head', {
    resource: 'collections'
  }) %>
</head>
<%= partial('body') %>
  <%= partial('organisms/header') %>

  <main class="main" id="__main" data-import="retail">
    <div class="container collection py-1 py-sm-2 py-lg-4">
      <div class="_ecom-el" data-type="collection" data-current="true">
        <nav class="d-none d-md-block" aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item">
              <a href="/">
                <i class="fas fa-home"></i>
              </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
              {{ name() }}
            </li>
          </ol>
        </nav>

        <section class="st-block-secondary text-center rounded mb-4 p-3">
          <h1 class="collection__name">
            {{ name() }}
          </h1>
        </section>
      </div>
      <% if (pages.collections.top) { %>
        <section class="rounded p-3">
          <%= md.render(pages.collections.top) %>
        </section>
      <% } %>
      <div
        class="_ecom-el"
        data-type="collection"
        data-vm="Retail"
        data-list="products"
        data-from="0"
        data-size="20">
        <%= partial('organisms/retail') %>
        <section class="collection__description my-5" v-if="body.body_html">
          <div v-html="body.body_html" class="wysiwyg-content"></div>
        </section>
      </div>
      <% if (pages.collections.botton) { %>
        <section class="rounded p-3">
          <%= md.render(pages.collections.botton) %>
        </section>
      <% } %>
    </div>
  </main>

  <%= partial('organisms/footer') %>
</body>
</html>
